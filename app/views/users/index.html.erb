<h1>Listing users</h1>

<table>
  <tr>
    <th>Name</th>
	<th>Account Details</th>
    <th>Email</th>
    <th>Dob</th>
    <th>Address</th>
    <th>State</th>
    <th>City</th>
    <th>Zip</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
	<td><% user.accounts.each do |account| %>
	    <%= account.number%>
		<%= "--"%>
		<%= account.atype%></br>
		<% end %> </td>
    <td><%= user.email %></td>
    <td><%= user.dob %></td>
    <td><%= user.address %></td>
    <td><%= user.state %></td>
    <td><%= user.city %></td>
    <td><%= user.zip %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

